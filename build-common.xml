    <!-- For any linked documents here, the href="xxx" must be matched
       - by an <api id="xxx"/> in web.xml
    <link href="${jdkapi.href}"/>
      -->
    </javadoc>

    <mkdir dir="${dist}"/>

    <jar 
      jarfile="${dist}/resin-javadoc-${version}.war"
      basedir="${build}/javadoc/web-app"
      compress="true"
      index="false">
      <exclude name="**/timestamp"/>
      <exclude name="**/WEB-INF/lib"/>

      <exclude name="**/work"/>
      <exclude name="**/tmp"/>
      <exclude name="**/.*"/>
      <exclude name="**/.svn"/>
      <exclude name="**/debug.log"/>
    </jar>

  </target>

  <macrodef name="generate-pdf">
    <attribute name="name"/>

    <sequential>

      <mkdir dir="${build}/pdf/@{name}"/>

      <java classname="com.caucho.xtpdoc.Printer" fork="true" 
            output="${build}/pdf/@{name}/@{name}.tex" logError="true"
            dir="${doc}/doc">
        <jvmarg value="-Djava.awt.headless=true"/>
        <arg file="${doc}/doc/@{name}.xml"/>
        <classpath>
          <pathelement location="${java.home}/../lib/tools.jar"/>
          <dirset dir="${modules}">
            <include name="*/classes"/>
          </dirset>
          <fileset dir="${modules}/ext">
            <include name="**/*.jar"/>
          </fileset>
        </classpath>
      </java>

      <exec dir="${build}/pdf/@{name}" executable="pdflatex">
        <arg file="${build}/pdf/@{name}/@{name}.tex" />
      </exec>

      <!-- One more time for the reference setting... -->
      <exec dir="${build}/pdf/@{name}" executable="pdflatex">
        <arg file="${build}/pdf/@{name}/@{name}.tex" />
      </exec>

    </sequential>
  </macrodef>

