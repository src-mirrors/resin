  //$topTicks = $entries[0]->getCount();
  $total_ticks = 0;
  for ($i = sizeof($entries) - 1; $i >= 0; $i--) {
    $total_ticks += $entries[$i]->getCount();
  }

  echo "<tr class='head'>"
  echo "<th colspan='5' align='left'>"
  echo "<span id='sw_$name' class='switch'></span>";
  echo "$name (" . sizeof($entries) . ")";

  echo "</th></tr>\n";

