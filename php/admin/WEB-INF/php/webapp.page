function display_tab($name, $un_name, $is_selected)
{
  echo "<li id='tab_" . $name . "' class='";
  
  if ($is_selected) {
    echo "selected";
  } 
 
  echo "'><a href='#' onclick=\"";
  echo "sel('tab_" . $name . "');";
  echo "show('g_" . $name . "');";
  
  echo "unsel('tab_" . $un_name . "');";
  echo "hide('g_" . $un_name . "');";

  echo "\">" . $name . "</a></li>\n";
}

