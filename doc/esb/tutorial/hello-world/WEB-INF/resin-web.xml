<!--
   - web.xml configuration file for the Hessian addition example.
  -->
<web-app xmlns="http://caucho.com/ns/resin">
  <web-service class="example.HelloServiceImpl">
    <jndi-name>service/HelloService</jndi-name>

    <hessian>
      <url-pattern>/hello/hessian/</url-pattern>
    </hessian>

    <rest>
      <query-binding/>
      <path-binding/>
      <url-pattern>/hello/rest/*</url-pattern>
    </rest>
  </web-service>

  <web-service-client jndi-name="hessian/HelloService">
    <url>hessian:${webApp.url}/hello/hessian/</url>
    <interface>example.HelloService</interface>
  </web-service-client>
</web-app>
