
<web-app xmlns="http://caucho.com/ns/resin"
         xmlns:resin="http://caucho.com/ns/resin/core">

  <class-loader>
    <simple-loader path="WEB-INF/src"/>

    <compiling-loader path="WEB-INF/classes"
                      source="WEB-INF/src"/>
  </class-loader>

  <database jndi-name="jdbc/drupal">
    <driver>
      <type>com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource</type>
      <url>jdbc:mysql://localhost:3306/test_drupal</url>
    </driver>
    <spy/>
  </database>

  <ejb-server allow-pojo="true" data-source="jdbc/drupal"/>

  <servlet-mapping url-pattern="*.php">
    <servlet-class>com.caucho.quercus.servlet.QuercusServlet</servlet-class>
    <init>
      <php-ini>
        <include_path>${app.docDir}/inc</include_path>
      </php-ini>
    </init>
  </servlet-mapping>

  <resin:log>EntityManager: ${jndi('java:comp/EntityManager')}</resin:log>

</web-app>
